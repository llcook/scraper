<div class="container-fluid" id="wrapper">

    <ul class="saved">
        {{#each headlines}}

        <li data-headline-id={{_id}} class="list-group-item">

            <h5 id="savedHeadline"><a href={{link}} target="_blank">{{headline}}</a></h5>

            <div class="mb-2">{{description}}</div>

            <!-- Note button trigger modal -->
            <button id="notes-btn" type="button" class="btn btn-primary" data-toggle="modal" data-target="#notes-modal">Notes</button>

            <button id="delete-btn" type="button" class="btn btn-info">Remove</button>
        </li>

        {{/each}}

        <!-- Modal -->
        <div class="modal fade" id="notes-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Notes</h5>

                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    {{!-- Modal content --}}
                    <div class="modal-body">
                        <div id="notes-content"></div>
                        <form>
                            <div class="form-group">
                                {{!-- <textarea class="form-control" id="note-input" rows="3"></textarea> --}}
                                <h3>Coming soon...</h3>
                                <p>Add notes to saved articles!</p>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        {{!-- <button id="save-note" type="button" class="btn btn-primary">Save changes</button> --}}
                    </div>
                </div>
            </div>
        </div>

    </ul>
</div>