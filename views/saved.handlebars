<div class="container-fluid" id="wrapper">
    <h2 class="ml-4"><i>Saved Articles</i></h2>

    <ul class="saved">
        {{#each headlines}}

        <li data-headline-id={{_id}} class="list-group-item">

            <h5 id="savedHeadline"><a href={{link}} target="_blank">{{headline}}</a></h5>

            <div class="mb-2">{{description}}</div>

            {{#if note}}
            <div class="note" data-note-id={{note._id}}>Notes: {{note.text}}</div>
            <button id="editNote">Edit Note</button>
            <form id="editForm">
                <input class="text" placeholder="Write note here" />
                <button type="submit">Edit Note</button>
            </form>
            {{/if}}

            {{#unless note}}

            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Notes</button>

            {{/unless}}

            <button type="button" class="btn btn-info">Remove</button>
        </li>

        {{/each}}

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Notes</h5>

                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                {{!-- <label for="exampleFormControlTextarea1">Example textarea</label> --}}
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>

    </ul>
</div>